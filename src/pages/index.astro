---
import BaseLayout from '../layouts/BaseLayout.astro';
import SequenceReader from '../components/SequenceReader.astro';
import { getEntryBySlug, render } from 'astro:content';

const entry = await getEntryBySlug('pages', 'home');
if (!entry) throw new Error('Missing content/pages/home.mdx');

const { Content } = await render(entry);
---
<BaseLayout title={entry.data.title} description={entry.data.description ?? ''}>
  <SequenceReader>
    <Content />
  </SequenceReader>
</BaseLayout>
